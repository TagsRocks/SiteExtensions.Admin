@using NuGet;
@using SiteExtensions.Administration;
@using SiteExtensions.Administration.Resources;

@{
    var id = Request.Form["id"];
    var version = SemanticVersion.Parse(Request.Form["version"]);

    var projectManager = new SiteExtensions.Administration.WebProjectManager();
    var package = projectManager.SourceRepository.FindPackage(id, version);

    projectManager.InstallPackage(package);
}


